<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"/>
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:colorPrimary">@color/gray_light</item>
        <item name="android:colorPrimaryDark">@color/gray_dark</item>
        <item name="android:colorAccent">@color/md_yellow_A700</item>
        <item name="android:popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:navigationBarColor">@color/gray_light</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:popupElevation">4dp</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text.NormalLabel" parent="Text">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.SectionLabel">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/menu</item>
    </style>

    <declare-styleable name="ShadowLayout">
        <attr format="dimension" name="slCornerRadius"/>
        <attr format="dimension" name="slShadowSize"/>
        <attr format="color" name="slShadowColor"/>
        <attr format="dimension" name="slDx"/>
        <attr format="dimension" name="slDy"/>
    </declare-styleable>

    <style name="Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/gradient</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/_85mdp</item>
        <item name="android:layout_height">@dimen/_40mdp</item>
        <item name="android:background">@drawable/green_button_background</item>
        <item name="android:textSize">@dimen/_17font_mdp</item>
        <item name="android:paddingLeft">@dimen/_21mdp</item>
        <item name="android:paddingRight">@dimen/_21mdp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_weight">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CommonTextView">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="TitleText" parent="CommonTextView">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FooterText" parent="CommonTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
    </style>

